" Enable filetype plugins
filetype plugin on
filetype indent on

" Set to auto read when a file is changed from the outside
set autoread

inoremap jk <ESC>

vnoremap . :norm.<CR>

set relativenumber

set ignorecase

set smartcase

set hlsearch

set incsearch 

set lazyredraw 

set showmatch

set noerrorbells

set novisualbell

set t_vb=

set tm=500

set encoding=utf8

set smarttab

set tabstop=4

set ai

set si

set wrap

set nobackup

set nowritebackup

set noswapfile

"unmap arrow keys

noremap <Up> <Nop>
noremap <Down> <Nop>
noremap <Left> <Nop>
noremap <Right> <Nop>
